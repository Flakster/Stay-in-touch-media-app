<section class="users-section">
  <ul class="users-list">
    <% @users.each do |user| %>
      <li>
        Name: <%= user.name %>
        <span class="profile-link">
          <%= link_to 'See Profile',  user_path(user), class: 'profile-link' %>
          <% if can_request_friendship?(user.id) && current_user.id != user.id%>
            <%= link_to 'Invite to friendship',  users_request_friendship_path(receiver: user.id), class: 'profile-link',
                                                method: :request_friendship %>
          <% end %>
        </span>
      </li>
    <% end %>
  </ul>
</section>
