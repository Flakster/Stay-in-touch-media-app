<section class="user-section">
  <h2><%= "Name: #{@user.name}" %></h2>
  <% if can_request_friendship?(@user.id) && current_user.id != @user.id%>
  <%= link_to 'Invite to friendship',  users_request_friendship_path(receiver: @user.id), class: 'profile-link',
                                      method: :request_friendship %>
  <% end %>
  <article class="timeline">
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
  </article>
</section>
